<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textview_profile_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_address"
        android:textSize="@dimen/profile_textview_size"
        android:textColor="@color/quantum_black_100"/>
    <TextView
        android:id="@+id/textview_profile_service_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/hint_address_sample"
        android:textSize="@dimen/profile_textview_size"
        android:textColor="@color/colorPrimaryDark"/>



</LinearLayout>
